<!DOCTYPE html>
<html lang="en">
    <%- include("__header.ejs") %>
<body id="booklist">
    <div class="container">
       

        <div class="heading text-left  mx-4 my-4 " >
            <h1 id = "mainPageHead">Jaun Nothnagel</h1>
            <h2 id="subHead">Books I've Read</h2>
            <p class="summary" id="summary">
                Below is a quick summary of all of the books that have peaked my intrest over the years.
                <strong>Detailed notes for each.</strong>
            </p>
        </div>
        <hr>
        <a href="/new" class="btn btn-success">Add another book</a>

<%bookList.forEach(book =>{%>
        <!-- img of book with title and description -->
        <div class="row">
            <div class="col-md-4 sm-6 lg-3" id="bookCover">
                <img class="bookImg" src="<%= coverURLs[book.id-1] %>" alt="">
            </div>
            <div class="col-md-6 sm-6 lg-9" id="bookData">
                <h3 id="booktitle" ><%=book.title %> by <%= book.author %></h3>
                <p class="small">Date Read: <%= dateRead[book.id-1] %><span id="rating"> Recommendation: <%= book.rating %>\10</span></p>
                <p>
                    <%= book.summary%>
                  
                </p>
               <div class="form">
                <a href="/books/<%=book.id%>" class="btn btn-primary" name="idForSelectedBook"  >View Notes</a>
                <a href="/books/editDetail/<%=book.id%>" class="btn btn-success">Edit Details</a>
               </div>
            </div>
        </div>

    <%})%>

<%- include("__footer.ejs") %>




    <!-- end of container div -->



